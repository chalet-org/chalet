{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "MSVC",
			"type": "cppvsdbg",
			"request": "launch",
			"cwd": "${workspaceFolder}/../chalet-example-modules",
			"preLaunchTask": "Build: Debug",
			"stopAtEntry": false,
			"console": "integratedTerminal",
			"program": "${workspaceFolder}/build/msvc_Debug/chalet-debug.exe",
			"args": [
				"build"
			]
		},
		{
			"name": "LLDB",
			"type": "lldb",
			"request": "launch",
			"cwd": "${workspaceFolder}/../chalet-example-modules",
			"preLaunchTask": "Build: Debug",
			"stopOnEntry": false,
			"program": "${workspaceFolder}/build/Debug/chalet-debug",
			"args": [
				"build"
			],
		},
		{
			"name": "GDB",
			"type": "cppdbg",
			"request": "launch",
			"cwd": "${workspaceFolder}/../new-project",
			"preLaunchTask": "Build: Debug",
			"program": "${workspaceFolder}/build/Debug/chalet-debug",
			"stopAtEntry": false,
			"args": [
				"run"
			],
			"externalConsole": false,
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"windows": {
				"program": "${workspaceFolder}/build/Debug/chalet-debug.exe",
				"MIMode": "gdb",
				"miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe"
			},
			"linux": {
				"MIMode": "gdb",
				"miDebuggerPath": "/usr/bin/gdb"
			}
		}
	]
}