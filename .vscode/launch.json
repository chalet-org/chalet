{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "MSVC",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/Debug/chalet-debug.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"envFile": "${workspaceFolder}/.env.windows",
			"preLaunchTask": "Build: Debug"
		},
		{
			"name": "GDB/LLDB",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/Debug/chalet-debug",
			"args": [
				// "--generator=vscode",
				"build",
				"Release"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Build: Debug",
			"externalConsole": false,
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"windows": {
				"program": "${workspaceFolder}/build/Debug/chalet-debug.exe",
				"MIMode": "gdb",
				"miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
				"env": {
					"Path": "${config:terminal.integrated.env.windows.Path}"
				}
			},
			"linux": {
				"MIMode": "gdb",
				"miDebuggerPath": "/usr/bin/gdb",
				"env": {
					"PATH": "${config:terminal.integrated.env.linux.PATH}",
				}
			},
			"osx": {
				"MIMode": "lldb",
				"env": {
					"PATH": "${config:terminal.integrated.env.osx.PATH}",
				}
			}
		}
	]
}