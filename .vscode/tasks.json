{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"options": {
		"env": {
			"CHALET_DEBUG": "build/Debug/chalet-debug"
		}
	},
	"presentation": {
		"echo": false,
		"reveal": "always",
		"focus": true,
		"panel": "shared",
		"clear": false,
		"showReuseMessage": true,
		"revealProblems": "never"
	},
	"tasks": [
		{
			"label": "Configure",
			"command": "bash ./build.sh Debug && ${CHALET_DEBUG} configure",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
		},
		{
			"label": "Build & Run: Release",
			"command": "${CHALET_DEBUG} -c Release buildrun",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
		},
		{
			"label": "Build: Release",
			"command": "${CHALET_DEBUG} -c Release build",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Run: Release",
			"command": "${CHALET_DEBUG} -c Release run",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Rebuild: Release",
			"command": "${CHALET_DEBUG} -c Release rebuild",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Clean: Release",
			"command": "${CHALET_DEBUG} -c Release clean",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build & Run: Debug",
			"command": "bash ./build.sh Debug && ${CHALET_DEBUG} -c Release buildrun",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build: Debug",
			"command": "bash ./build.sh Debug",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Rebuild: Debug",
			"command": "rm -rf build/Debug && bash ./build.sh Debug",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build & Run: Profile",
			"command": "${CHALET_DEBUG} buildrun Profile chalet 'build MinSizeRel'",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build & Run: Tests",
			"command": "${CHALET_DEBUG} -c Release buildrun tests_chalet",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Run: Tests",
			"command": "${CHALET_DEBUG} -c Release run tests_chalet",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Debug (Chalet Command)",
			"command": "bash ./build.sh Debug && ${CHALET_DEBUG} -c Release debug",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Bundle",
			"command": "bash ./build.sh Debug && ${CHALET_DEBUG} bundle",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Clean",
			"command": "rm -rf build dist",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Create Installer (Windows)",
			"command": "C:\\Program Files (x86)\\NSIS\\makensis.exe",
			"args": [
				"/WX",
				"/V3",
				"/NOCD",
				"platform/windows/installer/install_script.nsi"
			],
			"type": "process",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}