{
	"C_Cpp.preferredPathSeparator": "Forward Slash",
	"debug.toolBarLocation": "docked",
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"files.encoding": "utf8",
	"files.trimTrailingWhitespace": true,
	"files.eol": "\n",
	"files.exclude": {
		// "vendor": true,
		// "build/": true,
		// "dist/": true
	},
	"search.exclude": {
		"vendor": true
	},
	"terminal.integrated.automationShell.windows": "C:/Program Files/Git/bin/bash.exe",
	"terminal.integrated.env.windows": {
		"Path": "${env:Path}"
	},
	"json.schemas": [
		{
			"fileMatch": [
				"build.json",
				"build-*.json"
			],
			"url": "./schema/chalet.schema.json"
		},
		{
			"fileMatch": [
				"build/chalet-cache.json"
			],
			"url": "./schema/chalet-cache.schema.json"
		}
	]
}