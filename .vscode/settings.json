{
	"C_Cpp.preferredPathSeparator": "Forward Slash",
	"debug.toolBarLocation": "docked",
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"files.encoding": "utf8",
	"files.trimTrailingWhitespace": true,
	"files.eol": "\n",
	"files.exclude": {
		// "vendor": true,
		// "build/": true,
		// "dist/": true
	},
	"search.exclude": {
		"vendor": true
	},
	"terminal.integrated.env.windows": {
		"Path": "C:/msys64/mingw64/bin"
	},
	"terminal.integrated.env.linux": {
		"PATH": "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
	},
	"terminal.integrated.env.osx": {
		"PATH": "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
	},
	"workbench.colorCustomizations": {
		"terminal.ansiBrightBlack": "#777777",
		"terminal.ansiBrightRed": "#ee3355",
		"terminal.ansiRed": "#ee3355",
		"terminal.ansiBrightYellow": "#ffcc55",
		"terminal.ansiBrightGreen": "#a5ea4f",
		"terminal.ansiBrightBlue": "#5599ff",
	},
	"json.schemas": [
		{
			"fileMatch": [
				"build.json",
				"build-*.json"
			],
			"url": "./schema/chalet.schema.json"
		},
		{
			"fileMatch": [
				"build/chalet-cache.json"
			],
			"url": "./schema/chalet-cache.schema.json"
		}
	]
}