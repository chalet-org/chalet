{
	"C_Cpp.preferredPathSeparator": "Forward Slash",
	"C_Cpp.codeAnalysis.runAutomatically": false,
	"C_Cpp.codeAnalysis.exclude": {
		"${workspaceFolder}/external/**/*": true,
		"${workspaceFolder}/tests/**/*": true
	},
	"debug.toolBarLocation": "docked",
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"files.encoding": "utf8",
	"files.trimTrailingWhitespace": true,
	"files.eol": "\n",
	"search.exclude": {
		"external": true,
		"dist": true,
		"build": true,
		"platform/windows/installer/plugins": true
	},
	"chalet.statusBarButtons": false,
	"cmake.revealLog": "never",
	"cmake.statusbar.visibility": "hidden",
	"cmake.configureOnOpen": false,
	"files.associations": {
		"*.hpp.in": "cppin"
	},
	"[cppin]": {
		"editor.formatOnSave": false
	},
	"json.schemas": [
		{
			"fileMatch": [
				"chalet.json",
				"chalet-*.json"
			],
			"url": "./schema/chalet.schema.json"
		},
		{
			"fileMatch": [
				".chaletrc",
				"build/chalet-settings.json"
			],
			"url": "./schema/chalet-settings.schema.json"
		}
	]
}