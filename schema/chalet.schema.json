			"description": "A list of abstract build projects",
			"patternProperties": {
				"^[A-Za-z_-]+$": {
					"$ref": "#/definitions/target-project",
					"description": "An abstract build project. 'all' is implicitely added to each project."
				}
			}
		},
		"configurations": {
			"description": "An array of allowed build configuration presets, or an object of custom build configurations.",
			"default": [
				"Release",
				"Debug",
				"RelWithDebInfo",
				"MinSizeRel",
				"Profile"
			],
			"anyOf": [
				{
					"type": "object",
					"additionalProperties": false,
					"patternProperties": {
						"^[A-Za-z]{3,}$": {
							"$ref": "#/definitions/configuration"
						}
					}
				},
				{
					"type": "array",
					"uniqueItems": true,
					"minItems": 1,
					"items": {
						"type": "string",
						"description": "A configuration preset",
						"enum": [
							"Release",
							"Debug",
							"RelWithDebInfo",
							"MinSizeRel",
							"Profile"
						]
					}
				}
			]
		},
		"distribution": {
			"type": "object",
			"additionalProperties": false,
			"description": "A sequential list of distribution targets to be created during the bundle phase.",
			"patternProperties": {
				"^[\\w\\-\\+\\.\\ \\(\\)]{3,}$": {
					"description": "A single distribution target or script.",
					"oneOf": [
						{
							"$ref": "#/definitions/target-script"
						},
						{
							"$ref": "#/definitions/distribution-target"
						}
					]
				}
			}
		},
		"externalDepDir": {
			"type": "string",
			"description": "The path to install external dependencies into (see externalDependencies).",
			"default": "chalet_external"
		},
		"externalDependencies": {
			"type": "object",
			"additionalProperties": false,
			"description": "A sequential list of externalDependencies to install prior to building or via the configure command. The key will be the destination directory name for the repository within the folder defined in 'externalDepDir'.",
			"patternProperties": {
				"^[\\w\\-\\+\\.]{3,100}$": {
					"$ref": "#/definitions/external-dependency"
				}
			}
		},
		"searchPaths": {
			"$ref": "#/definitions/environment-searchPaths"
		},
		"targets": {
			"type": "object",
			"additionalProperties": false,
			"description": "A sequential list of projects, cmake projects, or scripts.",
			"patternProperties": {
				"^[\\w\\-\\+\\.]{3,}$": {
					"description": "A single build target or script.",
					"oneOf": [
						{
							"$ref": "#/definitions/target-project"
						},
						{
							"$ref": "#/definitions/target-script"
						},
						{
							"type": "object",
							"properties": {
								"type": {
									"$ref": "#/definitions/target-type"
								}
							},
							"allOf": [
								{
									"if": {
										"properties": {
											"type": {
												"const": "CMake"
											}
										}
									},
									"then": {
										"$ref": "#/definitions/target-cmake"
									}
								},
								{
									"if": {
										"properties": {
											"type": {
												"const": "Chalet"
											}
										}
									},
									"then": {
										"$ref": "#/definitions/target-chalet"
									}
								}
							]
						}
					]
				}
			}
		},
		"version": {
			"type": "string",
			"description": "Version of the workspace project.",
			"pattern": "^[\\w\\-\\+\\.]+$"
		},
		"workspace": {
			"type": "string",
			"description": "The name of the workspace.",
			"pattern": "^[\\w\\-\\+ ]+$"
		}
	},
	"patternProperties": {
		"^abstracts:[a-z]+$": {
			"$ref": "#/definitions/target-project",
			"description": "An abstract build project. 'abstracts:all' is a special project that gets implicitely added to each project"
		},
		"^searchPaths(:!?debug|)(\\.!?windows|\\.!?macos|\\.!?linux|)$": {
			"$ref": "#/definitions/environment-searchPaths"
		}
	}
}
