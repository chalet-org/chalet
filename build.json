	"allProjects": {
		"language": "C++",
		"dumpAssembly": false,
		"runDependencies": [],
		"compilerSettings:Cxx": {
			"cppStandard": "c++17",
			"rtti": false,
			"staticLinking": true,
			"posixThreads": true,
			"warnings": "strict",
			// "compileOptions": [],
			// "linkerOptions": [],
			"defines:Debug": [
				"_DEBUG"
			],
			"includeDirs": [
				"vendor"
			],
			"links": [
				"stdc++fs"
			],
			"links.windows": [
				"imagehlp"
			],
			"macosFrameworkPaths": [
				"/Library/Frameworks"
			],
			"macosFrameworks": []
		}
	},
	"projects": [
		{
			"name": "chalet",
			"kind": "consoleApplication",
			"location": [
				"src",
				"vendor/json-schema-validator",
				"vendor/subprocess"
			],
			"compilerSettings:Cxx": {
				"pch": "src/PCH.hpp"
			},
			"runProject": true
			/*"preBuild": {
				"alwaysRun": true,
				"script": "env/prebuild.sh"
			},
			"postBuild": {
				"alwaysRun": true,
				"script": "env/postbuild.sh"
			}*/
		},
		{
			"name": "tests_chalet",
			"kind": "consoleApplication",
			"location": {
				"include": [
					"src",
					"vendor/json-schema-validator",
					"vendor/subprocess",
					"test"
				],
				"exclude": "src/Main.cpp"
			},
			"compilerSettings:Cxx": {
				"pch": "src/PCH.hpp"
			},
			"runArguments": "-w NoTests -s",
			"onlyInConfiguration": "Release"
		}
	],
	"bundle": {
		"appName": "Chalet",
		"shortDescription": "Chalet Build System",
		"longDescription": "A Modern C/C++ Build System for GCC/Clang",
		"outDir": "dist",
		"configuration": "Release",
		"projects": [
			"chalet"
		],
		"dependencies": [],
		"exclude": [
			"*.psd",
			"*.rar",
			"*.7z",
			"Thumbs.db",
			".DS_Store"
		],
		"macos": {
			"bundleName": "Chalet",
			"bundleIdentifier": "com.developer.chalet",
			"icon": "env/chalet-logo.png",
			"infoPropertyList": "env/osx/Info.plist.json",
			"makeDmg": true,
			"dmgBackground": {
				"1x": "env/osx/dmg-background.png",
				"2x": "env/osx/dmg-background@2x.png"
			},
			"dylibs": []
		},
		"linux": {
			"icon": "env/chalet-logo.png",
			"desktopEntry": "env/linux/app.desktop"
		},
		"windows": {
			"icon": "env/windows/app.ico",
			"manifest": "env/windows/app.manifest"
		}
	} /*,
