	"templates:all": {
		"dumpAssembly": false,
		"language": "C++",
		"runDependencies": [],
		"compilerSettings:Cxx": {
			"cppStandard": "c++17",
			"rtti": false,
			"staticLinking": true,
			"posixThreads": true,
			"warnings": "strict",
			// "compileOptions": [],
			// "linkerOptions": [],
			"defines:debug": [
				"_DEBUG"
			],
			"includeDirs": [
				"vendor"
			],
			"links": [
				"stdc++fs"
			],
			"links.windows": [
				"imagehlp"
			],
			"macosFrameworkPaths": [
				"/Library/Frameworks"
			],
			"macosFrameworks": []
		}
	},
	"projects": {
		"json-schema-validator": {
			"kind": "staticLibrary",
			"location": "vendor/json-schema-validator"
		},
		"subprocess": {
			"kind": "staticLibrary",
			"location": "vendor/subprocess"
		},
		"pre-build": {
			"script.!windows": "env/prebuild.sh",
			"script.windows": "env/prebuild.bat"
		},
		"chalet": {
			"kind": "consoleApplication",
			"location": "src",
			"compilerSettings:Cxx": {
				"pch": "src/PCH.hpp",
				"staticLinks": [
					"json-schema-validator",
					"subprocess"
				]
			},
			"runProject": true
		},
		"post-build": {
			"script.!windows": "env/postbuild.sh",
			"script.windows": "env/postbuild.bat"
		},
		"tests_chalet": {
			"kind": "consoleApplication",
			"location": {
				"include": [
					"src",
					"test"
				],
				"exclude": "src/Main.cpp"
			},
			"compilerSettings:Cxx": {
				"pch": "src/PCH.hpp",
				"staticLinks": [
					"json-schema-validator",
					"subprocess"
				]
			},
			"runArguments": [
				"-w",
				"NoTests",
				"-s"
			],
			"onlyInConfiguration": "Release"
		}
	},
	"bundle": {
		"appName": "Chalet",
		"shortDescription": "Chalet Build System",
		"longDescription": "A Modern C/C++ Build System for GCC/Clang",
		"outDir": "dist",
		"configuration": "Release",
		"projects": [
			"chalet"
		],
		"dependencies": [],
		"exclude": [
			"*.psd",
			"*.rar",
			"*.7z",
			"Thumbs.db",
			".DS_Store"
		],
		"macos": {
			"bundleName": "Chalet",
			"bundleIdentifier": "com.developer.chalet",
			"icon": "env/chalet-logo.png",
			"infoPropertyList": "env/osx/Info.plist.json",
			"makeDmg": true,
			"dmgBackground": {
				"1x": "env/osx/dmg-background.png",
				"2x": "env/osx/dmg-background@2x.png"
			},
			"dylibs": []
		},
		"linux": {
			"icon": "env/chalet-logo.png",
			"desktopEntry": "env/linux/app.desktop"
		},
		"windows": {
			"icon": "env/windows/app.ico",
			"manifest": "env/windows/app.manifest"
		}
	} /*,
	"externalDependencies": {
		"catch2": {
			"repository": "git@github.com:catchorg/Catch2.git",
			"branch": "v2.x"
		},
		"ctre": {
			"repository": "git@github.com:hanickadot/compile-time-regular-expressions.git"
		},
		"fmt": {
			"repository": "git@github.com:fmtlib/fmt.git"
		},
		"ghc_fs": {
			"repository": "git@github.com:gulrak/filesystem.git"
		},
		"nlohmann_json": {
			"repository": "git@github.com:nlohmann/json.git"
		},
		"ust": {
			"repository": "git@github.com:MisterTea/UniversalStacktrace.git"
		}
	}*/
}