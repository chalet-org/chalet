	"abstracts:all": {
		"language": "C++",
		"runDependencies": [],
		"settings:Cxx": {
			"cppStandard": "c++17",
			"rtti": false,
			"staticLinking": true,
			"warnings": "strict",
			// "compileOptions": [],
			// "linkerOptions": [],
			"defines:debug": [
				"_DEBUG"
			],
			"includeDirs": [
				"vendor"
			],
			"links": [
				"stdc++fs"
			],
			"links.windows": [
				"imagehlp"
			],
			"macosFrameworkPaths": [
				"/Library/Frameworks"
			],
			"macosFrameworks": []
		}
	},
	"targets": {
		"json-schema-validator": {
			"kind": "staticLibrary",
			"location": "vendor/json-schema-validator"
		},
		"subprocess": {
			"kind": "staticLibrary",
			"location": "vendor/subprocess"
		},
		"chalet": {
			"kind": "consoleApplication",
			"location": "src",
			"settings:Cxx": {
				"pch": "src/PCH.hpp",
				"staticLinks": [
					"json-schema-validator",
					"subprocess"
				]
			},
			"runProject": true
		},
		"tests_chalet": {
			"kind": "consoleApplication",
			"location": {
				"include": [
					"src",
					"test"
				],
				"exclude": "src/Main.cpp"
			},
			"settings:Cxx": {
				"pch": "src/PCH.hpp",
				"staticLinks": [
					"json-schema-validator",
					"subprocess"
				]
			},
			"runArguments": [
				"-w",
				"NoTests",
				"-s"
			],
			"onlyInConfiguration": "Release"
		},
		"script-bash": {
			"script.!windows": "platform/script_shell.sh",
			"script.windows": "platform/script_batch.bat"
		}
		/*"script-batch": {
			"script.windows": "platform/script_batch.bat"
		},
		"script-powershell": {
			"script.windows": "platform/script_powershell.ps1"
			// "script.macos": "platform/script_powershell.ps1"
		},
		"script-bash-bad": {
			"script": "platform/script_shell_bad.sh"
		},
		"script-python": {
			"script": "platform/script_python.py"
		},
		"script-ruby": {
			"script": "platform/script_ruby.rb"
		},
		"script-perl": {
			"script": "platform/script_perl.pl"
		},
		"script-lua": {
			"script": "platform/script_lua.lua"
		}*/
	},
	"distribution": {
		"Chalet": {
			"description": "A Modern C/C++ Build System for GCC/Clang",
			"outDir": "dist",
			"configuration": "Release",
			"projects": [
				"chalet"
			],
			"dependencies": [],
			"exclude": [
				"*.psd",
				"*.7z",
				"Thumbs.db",
				".DS_Store"
			],
			"macos": {
				"bundleName": "Chalet",
				"icon": "platform/chalet-logo.png",
				"infoPropertyList": {
					"CFBundleName": "${bundleName}",
					"CFBundleDisplayName": "${name}",
					"CFBundleIdentifier": "com.developer.app",
					"CFBundleVersion": "${version}",
					"CFBundleDevelopmentRegion": "en",
					"CFBundleInfoDictionaryVersion": "6.0",
					"CFBundlePackageType": "APPL",
					"CFBundleSignature": "????",
					"CFBundleExecutable": "${mainProject}",
					"CFBundleIconFile": "${icon}",
					"NSHighResolutionCapable": true
				},
				"makeDmg": false,
				"dmgBackground": {
					"1x": "platform/osx/dmg-background.png",
					"2x": "platform/osx/dmg-background@2x.png"
				},
				"dylibs": []
			},
			"linux": {
				"icon": "platform/chalet-logo.png",
				"desktopEntry": "platform/linux/app.desktop"
			},
			"windows": {
				"icon": "platform/windows/app.ico",
				"manifest": "platform/windows/app.manifest"
			}
		}
	} /*,
	"externalDependencies": {
		"catch2": {
			"repository": "git@github.com:catchorg/Catch2.git",
			"branch": "v2.x"
		},
		"ctre": {
			"repository": "git@github.com:hanickadot/compile-time-regular-expressions.git"
		},
		"fmt": {
			"repository": "git@github.com:fmtlib/fmt.git"
		},
		"ghc_fs": {
			"repository": "git@github.com:gulrak/filesystem.git"
		},
		"nlohmann_json": {
			"repository": "git@github.com:nlohmann/json.git"
		},
		"ust": {
			"repository": "git@github.com:MisterTea/UniversalStacktrace.git"
		}
	}*/
