	"distribution": {
		"Chalet": {
			"kind": "bundle",
			// "subdirectory": "dist",
			"configuration": "Release",
			"buildTargets": [
				"chalet"
			],
			"include": [
				"scripts/chalet-completion.sh",
				"LICENSE.txt",
				"README.md"
			],
			"exclude": [
				"**.psd",
				"**.7z",
				"Thumbs.db",
				".DS_Store"
			] /*,
			"macosBundle": {
				"type": "app",
				"infoPropertyList": "platform/macos/Info.plist.json",
				"icon": "platform/chalet-logo.png"
			},
			"linuxDesktopEntry": {
				"template": "platform/linux/app.desktop",
				"icon": "platform/chalet-logo.png"
			}*/
		},
		"post-bundle": {
			"kind": "script",
			"script.!windows": "scripts/script_shell.sh",
			"script.windows": "scripts/script_batch.bat"
		},
		"chalet-(triple)": {
			"kind": "archive",
			"include": "*"
		},
		"chalet-windows-installer": {
			"kind": "windowsNullsoftInstaller",
			"nsisScript": "platform/windows/installer/install_script.nsi"
		}
	} /*,
	"externalDependencies": {
		"catch2": {
			"repository": "git@github.com:catchorg/Catch2.git",
			"branch": "v2.x"
		},
		"ctre": {
			"repository": "git@github.com:hanickadot/compile-time-regular-expressions.git"
		},
		"fmt": {
			"repository": "git@github.com:fmtlib/fmt.git"
		},
		"ghc_fs": {
			"repository": "git@github.com:gulrak/filesystem.git"
		},
		"nlohmann_json": {
