	"distribution": {
		"Chalet": {
			"kind": "bundle",
			// "subdirectory": "dist",
			"configuration": "Release",
			"buildTargets": [
				"chalet"
			],
			"include": [
				"scripts/chalet-completion.sh",
				"LICENSE.txt",
				"README.md"
			],
			"exclude": [
				"**.psd",
				"**.7z",
				"Thumbs.db",
				".DS_Store"
			] /*,
			"macosBundle": {
				"type": "app",
				"infoPropertyList": "platform/macos/Info.plist.json",
				"icon": "platform/chalet-logo.png"
			},
			"linuxDesktopEntry": {
				"template": "platform/linux/app.desktop",
				"icon": "platform/chalet-logo.png"
			}*/
		},
		"post-bundle": {
			"kind": "script",
			"file.!windows": "scripts/script_shell.sh",
			"file.windows": "scripts/script_batch.bat"
		},
		"chalet-${targetTriple}": {
			"kind": "archive",
			"include": "*"
		},
		"chalet-windows-installer": {
			"kind": "windowsNullsoftInstaller",
			"file": "platform/windows/installer/install_script.nsi",
			"pluginDirs": [
				"platform/windows/installer/plugins"
			]
