	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++17",
			"runtimeTypeInformation": false,
			"staticRuntimeLibrary.windows": true,
			"cppFilesystem": true,
			"warnings": "strict",
			"treatWarningsAsErrors": true,
			"defines.debug": [
				"_DEBUG",
				"JSON_NOEXCEPTION"
			],
			"includeDirs": [
				"external/nlohmann/single_include",
				"external/json-schema-validator/src",
				"external/fmt/include",
				"external"
			],
			"links.windows": "imagehlp"
		}
	},
	"targets": {
		"json-schema-validator-s": {
			"kind": "staticLibrary",
			"files": "external/json-schema-validator/src/*.cpp"
		},
		"chalet": {
			"kind": "executable",
			"settings:Cxx": {
				"precompiledHeader": "src/PCH.hpp",
				"windowsApplicationManifest": "platform/windows/app.manifest",
				"staticLinks": "json-schema-validator-s",
				"includeDirs": "src"
			},
			"files": "src/**.{cpp,rc}"
		},
		"tests": {
			"kind": "executable",
			"condition": "!debug",
			"settings:Cxx": {
				"precompiledHeader": "src/PCH.hpp",
				"staticLinks": "json-schema-validator-s",
				"includeDirs": [
					"src",
					"tests",
					"external/catch2/single_include"
				]
			},
			"files": [
				"src/*/**.{cpp,rc}",
				"tests/**.cpp"
			],
			"defaultRunArguments": [
				"-w",
				"NoTests",
				"-s"
			]
		},
		"script-shell": {
			"kind": "script",
			"file.!windows": "scripts/script_shell.sh",
			"file.windows": "scripts/script_batch.bat"
		}
		/*"script-shell-env": {
