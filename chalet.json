	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++17",
			"rtti": false,
			"staticLinking": true,
			"warnings": "strict",
			"defines.debug": [
				"_DEBUG",
				"JSON_NOEXCEPTION"
			],
			"includeDirs": [
				"vendor/nlohmann/single_include",
				"vendor/json-schema-validator/src",
				"vendor/fmt/include",
				"vendor/argparse/include",
				"vendor/glob/single_include",
				"vendor"
			],
			"links": [
				"stdc++fs"
			],
			"links.windows": [
				"imagehlp"
			]
		}
	},
	"targets": {
		"json-schema-validator": {
			"kind": "staticLibrary",
			"location": "vendor/json-schema-validator/src"
		},
		"chalet": {
			"kind": "executable",
			"location": "src",
			"settings:Cxx": {
				"pch": "src/PCH.hpp",
				"windowsApplicationManifest": "platform/windows/app.manifest",
				"staticLinks": [
					"json-schema-validator"
				]
			},
			"runTarget": true
		},
		"tests_chalet": {
			"kind": "executable",
			"condition": "!debug",
			"location": {
				"include": [
					"src",
					"test"
				],
				"exclude": "src/Main.cpp"
			},
			"settings:Cxx": {
				"pch": "src/PCH.hpp",
				"staticLinks": [
					"json-schema-validator"
				],
				"includeDirs": [
					"vendor/catch2/single_include"
				]
			},
			"runArguments": [
				"-w",
				"NoTests",
				"-s"
			]
		},
		"script-shell": {
			"kind": "script",
			"script.!windows": "scripts/script_shell.sh",
			"script.windows": "scripts/script_batch.bat"
		}
		/*"script-shell-env": {
			"kind": "script",
			"script.!windows": "scripts/script_shell_env.sh",
